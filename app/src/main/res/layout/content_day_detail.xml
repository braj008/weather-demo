<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_day_detail"
        tools:context=".activity.DayDetailActivity">

    <TextView
            android:text="Summary: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_summary_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_summary_value" app:layout_constraintStart_toEndOf="@+id/tv_summary_title"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_summary_title"/>

    <TextView
            android:text="Temperature: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_temp_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_summary_title"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_temp_value" app:layout_constraintStart_toEndOf="@+id/tv_temp_title"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_temp_title"/>
    <TextView
            android:text="Dew: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/tv_due_title" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_temp_title" android:textColor="@android:color/black"
            android:textStyle="bold"/>

    <TextView
            android:text="NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_due_value" app:layout_constraintStart_toEndOf="@id/tv_due_title"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_due_title"/>

    <TextView
            android:text="Humidity: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/tv_humidity_title" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_due_title" android:textColor="@android:color/black"
            android:textStyle="bold"/>

    <TextView
            android:text="NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_humidity_value" app:layout_constraintStart_toEndOf="@id/tv_humidity_title"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_humidity_title"/>

    <TextView
            android:text="Pressure: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/tv_pressure_title" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_humidity_title" android:textColor="@android:color/black"
            android:textStyle="bold"/>

    <TextView
            android:text="NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pressure_value" app:layout_constraintStart_toEndOf="@id/tv_pressure_title"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_pressure_title"/>

    <TextView
            android:text="Wind speed: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/tv_windspeed_title" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_pressure_title" android:textColor="@android:color/black"
            android:textStyle="bold"/>

    <TextView
            android:text="NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_windspeed_value" app:layout_constraintStart_toEndOf="@id/tv_windspeed_title"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_windspeed_title"/>

</android.support.constraint.ConstraintLayout>